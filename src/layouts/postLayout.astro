---
import Star from "../components/star.astro";
import NavBar from "../components/navbar.astro";
import Floaters from "../components/floaters.astro";

import type { CollectionEntry } from "astro:content";

type Props = {
  entry: CollectionEntry<"posts">;
};

const { entry }: Props = Astro.props;
const stars = Array(100).fill(null);
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content={`Blog from Samuel Fernandez: ${entry.data.name}'`}
    />
    <title>Samuel Fernandez</title>

    <style is:global>
      @font-face {
        font-family: "Dosis";
        font-display: swap;
        src: url("/fonts/Dosis.ttf") format("truetype");
      }
      @font-face {
        font-family: "Space Grotesk";
        font-display: swap;
        src: url("/fonts/SpaceGrotesk.ttf") format("truetype");
      }
    </style>
  </head>
  <body class="text-white dark:bg-bgc">
    <div>
      <Floaters />
    </div>
    <div>
      {stars.map(() => <Star />)}
    </div>
    <NavBar />
    <main class="m-5 flex flex-col items-center justify-start bg-black md:m-10">
      <div class="z-20 flex w-full flex-col items-center justify-start">
        <h2 class="font-space-grotesk text-4xl md:text-5xl lg:text-6xl">
          {entry.data.name}
        </h2>
        <p class="my-5 text-center text-3xl">
          {entry.data.date.toDateString()} â€¢ {entry.data.readingTime} minute
          read
        </p>
      </div>
      <div
        class="z-20 mt-10 flex w-full flex-col items-start justify-start border-2 border-border bg-bgc p-5 text-3xl [filter:drop-shadow(5px_5px_20px_rgba(255,255,255,0.25))] md:w-5/6 md:px-10">
        <slot />
      </div>
    </main>
    <script src="../util/drawFloaters.ts"></script>
    <script src="../util/drawStars.ts"></script>
  </body>
</html>
